<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-7">Edit</h1>
    </div>
  </div>


  <%= form_with(model: @tube, local: true) do |form| %>
    <% if @tube.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@tube.errors.count, "error") %> prohibited this tube from being saved:</h2>

        <ul>
          <% @tube.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, id: :tube_title, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :transcript %>
      <%= form.text_area :transcript, id: :tube_transcript, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= form.file_field :video %>
    </div>

    <div class="form-group">
      <%= form.submit 'Comfirm', :class => 'btn btn-outline-secondary' %>
      <%= link_to 'Cancel', tubes_path, :class => 'btn btn-outline-secondary' %>
      <%= link_to 'View', @tube, :class => 'btn btn-outline-secondary' %>

    </div>
  <% end %>


</div>