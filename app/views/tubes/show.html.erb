<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <p id="notice"><%= notice %></p>

  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-7"><%= @tube.title %></h1>
    </div>
  </div>

  <div class="container text-center">
    <p>
      <%= video_tag @tube.video_url.to_s, :height => '500', :controls => true %>
    </p>
  </div>
  <div class="container  px-2 py-2 ">
    <ul class="nav nav-tabs " id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">中文字幕</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Google翻譯版本</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">英文原稿</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab"><%= simple_format(@tube.transcript) %></div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">...</div>
      <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
    </div>
  </div>

  <%= link_to 'Edit', edit_tube_path(@tube), :class => 'btn btn-outline-secondary' %>
  <%= link_to 'Back', tubes_path, :class => 'btn btn-outline-secondary' %>
</div>
