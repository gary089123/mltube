<div class='container'>
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-7">Upload</h1>
    </div>
  </div>

  <%= form_with(model: @tube, local: true) do |form| %>
    <% if @tube.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@tube.errors.count, "error") %> prohibited this tube from being saved:</h2>

        <ul>
          <% @tube.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, id: :tube_title, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :transcript %>
      <%= form.text_area :transcript, id: :tube_transcript, :class => "form-control" , :wrap=>"hard"%>
    </div>

    <div class="form-group">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Upload</span>
        </div>
        <div class="custom-file">
          <%= form.file_field :video ,:class=>'custom-file-input', :id => 'inputGroupFile01'%>
          <label class="custom-file-label" for="inputGroupFile01">Choose File</label>
        </div>
      </div>

    </div>

    <div class="form-group">
      <%= form.submit '確定', :class => 'btn btn-primary' %>
      <%= link_to '取消', tubes_path, :class => 'btn btn-primary' %>
    </div>
  <% end %>

</div>
